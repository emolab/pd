    <script> 
      function CheatSheetToggle(el){
        var CheatSheetAnimation = document.getElementById('AnswerSheet');
        var WhiteSky = document.getElementById('WhiteSky');
        var playercursor = document.getElementById('playercursor');
        var HowYaFeeling = document.getElementById('HowYaFeelingText');
        var ButtonDirection = CheatSheetAnimation.getAttribute('direction');      
        //Uncaught TypeError: el.emit is not a function
        if (ButtonDirection != 'normal'){
          CheatSheetAnimation.setAttribute('direction','normal');
          CheatSheetAnimation.setAttribute('material', 'src','#CheatSheetHome');
          WhiteSky.setAttribute('visible','true');
          HowYaFeeling.setAttribute('text__qtext','color','black');
          playercursor.setAttribute('color','black');
        }  else { CheatSheetAnimation.setAttribute('direction','reverse');
                   CheatSheetAnimation.setAttribute('material', 'src','#CheatSheetMath');
                   WhiteSky.setAttribute('visible','false');
                   HowYaFeeling.setAttribute('text__qtext','color','white');
                   playercursor.setAttribute('color','white');
        }
      };
    </script>
    <script>
      function FeelingsPopUp(scale) {
         var feelindicator = document.getElementById('FeelingsIndicator');
        feelindicator.setAttribute('scale', '1 1 1')}
        setInterval(FeelingsPopUp, 5 * 1000); 
       function FeelingsDown(scale) {
       var feelindicator = document.getElementById('FeelingsIndicator');
        feelindicator.setAttribute('scale', '0 0 0');}
    
    </script>
